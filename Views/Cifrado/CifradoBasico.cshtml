<h1>Cifrado básico</h1>

<form method="post">
    <label>Contenido a cifrar: </label>
    <input type="text" name="contenido" class="form-control" />
    <label>Resultado: </label>
    <textarea name="resultado" rows="5" class="form-control">@ViewData["TEXTOCIFRADO"]</textarea>
    <button name="accion" value="cifrar" class="btn btn-outline-success">
        Cifrar
    </button>
    <button name="accion" value="comparar" class="btn btn-outline-warning">
        Comparar
    </button>
</form>

<h1 style="color: royalblue">
    @ViewData["MENSAJE"]
</h1>